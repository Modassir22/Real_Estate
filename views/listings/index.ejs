<% layout("/layouts/boilerplate") -%>

<!-- Nav AND lANDING -->
<div class="main index">
  <div class="main_quote">
    <h1>My Estate!</h1>
    <p>Navigate the lively Real Estate Encyclopedia</p>
  </div>

  <div class="main_bg">
    <img src="./images/mainimage.png" alt="" />
  </div>

  
    <form class="search" action="/listings/search" method="post">
    <div class="first">
      <h3>Location</h3>
      <label for="one">Select Location</label>
      <select name="location" id="one">
        <option value="Bhilai">India</option>
        <option value="Abu Dhabi">UAE</option>
      </select>
    </div>
    <div class="second">
      <h3>Property Type</h3>
      <label for="two">Choose Property Type</label>
      <select name="property" id="two">
        <option value="Flat">Flat</option>
        <option value="Room">Room</option>
      </select>
    </div>
    <div class="third">
      <h3>Price Range</h3>
      <label for="three">Choose Price</label>
      <select name="price" id="three">
        <option value="1500000">1500000</option>
        <option value="2500000">2500000</option>
      </select>
    </div>
    <div class="fourth">
      <button class="btn">Search</button>
    </div>
    </form>
</div>


<!-- Hero Section -->
<div class="hero_section">
  <div class="hero_section_container">
    <img src="./images/image.jpg" alt="" />
  </div>
  <div class="hero_section_info">
    <div class="hero_quote1">
      <h3>
        We've got new properties 
        for everyone
      </h3>
